# Auth
BUDGIE_ALLOW_SIGNUP=false
BUDGIE_SESSION_TTL=336h
BUDGIE_PASSWORD_MIN=12
BUDGIE_TRUST_PROXY=false
BUDGIE_COOKIE_SECURE=false

# OIDC (example: Google)
